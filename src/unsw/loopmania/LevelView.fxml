<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<AnchorPane prefHeight="480.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="480.0" fitWidth="380.0" layoutY="0" pickOnBounds="true">
         <image>
            <Image url="@../../images/grass.jpg" />
         </image>
      </ImageView>
      <Label layoutX="51.0" layoutY="76.0" prefHeight="83.0" prefWidth="281.0" text="Choose Mode" textFill="#220909">
         <font>
            <Font name="Agency FB Bold" size="63.0" />
         </font></Label>
      <Button fx:id="StandardMode" layoutX="140.0" layoutY="227.0" mnemonicParsing="false" onAction="#switchToStandard" prefHeight="25.0" prefWidth="118.0" text="Standard Mode" />
      <Button fx:id="SurvivalMode" layoutX="140.0" layoutY="269.0" mnemonicParsing="false" onAction="#switchToSurvival" prefHeight="25.0" prefWidth="118.0" text="Survival Mode" />
      <Button fx:id="BerserkerMode" layoutX="140.0" layoutY="312.0" mnemonicParsing="false" onAction="#switchToBerserker" prefHeight="25.0" prefWidth="118.0" text="Berserker Mode" />
      <Button fx:id="ConfusingMode" layoutX="140.0" layoutY="353.0" mnemonicParsing="false" onAction="#switchToConfusing" prefHeight="25.0" prefWidth="118.0" text="Confusing Mode" />
   </children>
</AnchorPane>
