<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Choose Level" />
      <Button fx:id="StandardMode" mnemonicParsing="false" onAction="#switchToGame" text="Standard Mode" />
      <Button fx:id="SurvivalMode" mnemonicParsing="false" onAction="#switchToGame" text="Survival Mode" />
      <Button fx:id="BerserkerMode" mnemonicParsing="false" onAction="#switchToGame" text="Berserker Mode" />
   </children>
   <padding>
      <Insets bottom="120.0" left="120.0" right="120.0" top="120.0" />
   </padding>
</VBox>
